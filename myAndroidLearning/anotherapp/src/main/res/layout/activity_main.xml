<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入数据"
        android:textSize="20sp"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/start_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Start Remote App Service"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/stop_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Stop Remote App Service"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/bind_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bind Remote App Service"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/unbind_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Unbind Remote App Service"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/sync_data_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Sync Data in Remote App Service"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"/>

</LinearLayout>