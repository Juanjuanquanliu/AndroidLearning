<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <Button
        android:id="@+id/send_msg_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="给Activity传消息" />

    <Button
        android:id="@+id/changeFragmentTo2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="更换到My Fragment 2" />

    <Button
        android:id="@+id/changeFragmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="更换TextView文字内容" />

    <TextView
        android:id="@+id/my_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是 myFragment"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:gravity="center"/>
</LinearLayout>