<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageLearning.DataPersistenceMainActivity"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/file_test_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="jump to file_storage_test"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_click"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/share_preferences_test_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="jump to share_preferences_test"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_click"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/share_preferences_login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="jump to login_test"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_click"
        android:layout_marginTop="10dp"/>
</LinearLayout>