<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceLearning.Service_AIDL.AIDLServiceMainActivity">

    <Button
        android:id="@+id/start_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Start AnotherApp Service"
        android:textAllCaps="false"
        android:background="@drawable/button_click"
        />

    <Button
        android:id="@+id/stop_anotherApp_service_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Stop AnotherApp Service"
        android:textAllCaps="false"
        android:background="@drawable/button_click"
        android:layout_marginTop="5dp"/>
</LinearLayout>