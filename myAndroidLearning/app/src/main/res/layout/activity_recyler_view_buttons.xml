<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.RecyclerView.RecylerViewButtonsActivity">
    <Button
        android:id="@+id/vertical_recycler_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vertical_recycler_view_btn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/fruit_recycler_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fruit_recycler_view_btn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/grid_recycler_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grid_recycler_view_btn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/waterfall_recycler_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="waterfall_recycler_view_btn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/chat_box_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chat_box_btn"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
</LinearLayout>